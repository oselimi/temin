<h1 align="center">Login</h1>

<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |t| %>

  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= t.label :email %>
    </div>
    <div class="col-sm-8">
      <%= t.email_field :email, class: "form-control", placeholder: "Enter email"%>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= t.label :password %>
    </div>
    <div class="col-sm-8">
      <%= t.password_field :password, class: "form-control", placeholder: "Enter password" %>
    </div>
  </div>
  <div class="form-group">
    <div clss="col-sm-offset col-sm-10">
      <%= t.submit "Log in" %>
    </div>
  </div>
    <% end %>